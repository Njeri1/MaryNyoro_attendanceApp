<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/grey"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/head"
        android:layout_width="410dp"
        android:layout_height="49dp"
        android:layout_column="2"
        android:background="@color/Maroon"
        android:inputType="textPersonName"
        android:text="ALU Class Attendance App"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/student_id"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/student_id"
        android:hint="Tap Student ID Card"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <EditText
        android:id="@+id/department"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/department"
        android:hint="Department"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/session"
        android:layout_width="410dp"
        android:layout_height="30dp"

        android:layout_marginTop="25dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/session"
        android:hint="Session"
        app:layout_constraintTop_toBottomOf="@+id/department"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/student_name"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/student_name"
        android:hint="Student Name"

        app:layout_constraintTop_toBottomOf="@+id/head"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/password"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/White"
        android:drawableLeft="@drawable/email"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@+id/student_id"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"

        android:background="@color/White"
        android:drawableLeft="@drawable/gender"
        android:hint="Gender"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"

        />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:text="Male"
        app:layout_constraintEnd_toEndOf="@+id/gender"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="@+id/gender"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Female"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="@+id/gender"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add"
        android:background="@color/purple"
        app:layout_constraintStart_toStartOf="@+id/session"
        app:layout_constraintTop_toBottomOf="@+id/session" />

    <Button
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Read"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/session" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Delete"
        android:background="@color/pink"
        app:layout_constraintStart_toEndOf="@+id/read"
        app:layout_constraintTop_toBottomOf="@+id/session" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="update"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/delete"
        app:layout_constraintTop_toBottomOf="@+id/session" />

    <TextView
        android:id="@+id/Textview4"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:background="@color/Maroon"
        android:text="ID"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head"
        app:layout_constraintVertical_bias="0.978" />

    <EditText
        android:id="@+id/etID"
        android:layout_width="277dp"
        android:layout_height="38dp"
        android:background="@color/White"
        android:ems="10"
        android:hint="Use to update or delete"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />


</androidx.constraintlayout.widget.ConstraintLayout>


